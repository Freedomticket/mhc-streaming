# MHC Streaming - Frontend Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
# Backend API Gateway URL (default: http://localhost:3000)
NEXT_PUBLIC_API_URL=http://localhost:3000

# WebSocket URL for real-time features (default: ws://localhost:3000)
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Application Configuration
NEXT_PUBLIC_APP_NAME="MHC Streaming"
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVESTREAM=true
NEXT_PUBLIC_ENABLE_COMMENTS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# External Services (Optional)
# NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_...
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-...

# Development
NODE_ENV=development
