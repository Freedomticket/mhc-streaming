# Database
DATABASE_URL=postgresql://mhc_user:mhc_password@localhost:5432/mhc_streaming

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: [Convert]::ToBase64String((1..64 | ForEach-Object { Get-Random -Maximum 256 }))
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET
JWT_REFRESH_SECRET=REPLACE_WITH_GENERATED_SECRET

# AWS (for media storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=mhc-media-bucket

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Service URLs (for docker-compose)
AUTH_SERVICE_URL=http://localhost:3001
MEDIA_SERVICE_URL=http://localhost:3002
STREAM_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
ANALYTICS_SERVICE_URL=http://localhost:3005

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Node Environment
NODE_ENV=development
